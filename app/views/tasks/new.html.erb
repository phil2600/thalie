<div style="margin: 10pt 10pt 10pt 10pt">
<h1>New task</h1>
<% form_for(@task) do |f| %>
<%= f.error_messages %>
<p>
    <%= f.label :name %>
    <br/>
    <%= f.text_field :name %>
</p>
<p>
    <%= f.label :description %>
    <br/>
    <%= f.text_area :description %>
</p>
<p>
    <%= calendar_date_select_includes "red" %>
    <%= f.label :date %>
    <br/>
    <%= calendar_date_select_tag 'task[date]', nil,
    :time => true,
    :year_range => 1.years.ago..2.years.ago %>
</p>
<p>
    <%= f.submit "Create" %>
</p>
<% end %>
<%= link_to 'Back', tasks_path %>
</div>